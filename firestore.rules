rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- JUDGING APP (Existing) ---
    match /artifacts/{appId}/public/data/scores/{scoreId} {
      // Allow authenticated users to read all scores
      allow read: if isAuthenticated();

      // Allow authenticated users to create scores
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['judgeName', 'teamName', 'totalScore', 'timestamp', 'userId'])
        && request.resource.data.userId == request.auth.uid;

      // Allow users to update or delete only their own scores
      allow update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // --- GAME ROOMS ---
    // This allows signed-in users (even anonymous) to use the rooms
    match /artifacts/{appId}/public/data/rooms/{roomCode} {
      allow read, write: if request.auth != null;
    }

    // --- VOCAB VOICE RALLY ---
    // This strictly matches ONLY data for the Vocab App
    // and puts it in "Test Mode" (open access)
    match /artifacts/vocab-rally-class-1/{document=**} {
      allow read, write: if true;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
